@using OnlineBooking.Domain.Dtos
@model HotelModel

@{
    ViewData["Title"] = "Update Records";
}

<div class="container mt-5">
    <h2 class="mb-4">ჯავშნის განახლება</h2>

    <form asp-action="Edit" asp-controller="Hotel" method="post" class="needs-validation" novalidate>
        <div class="form-group">
            <label asp-for="Name" class="control-label">სახელი</label>
            <input asp-for="Name" class="form-control" type="text" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label">მისამართი</label>
            <input asp-for="Address" class="form-control" type="text" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="City" class="control-label">ქალაქი</label>
            <input asp-for="City" class="form-control" type="text" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PicturePath" class="control-label">სურათის ბილიკი</label>
            <input asp-for="PicturePath" class="form-control" type="text" />
            <span asp-validation-for="PicturePath" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">ცვლიელებების შენახვა</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
