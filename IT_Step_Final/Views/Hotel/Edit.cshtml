@using OnlineBooking.Domain.Dtos
@model HotelModel;
@{
    ViewData["Title"] = "Update Records";
}

<h2>ჯავშნის განახლება</h2>

<form asp-action="Edit" asp-controller="Hotel" method="post">

    <div class="form-group">
        <label asp-for="City" class="control-label"></label>
        <input asp-for="City" class="form-control" type="text" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" type="text" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City" class="control-label"></label>
        <input asp-for="City" class="form-control" type="text" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PicturePath" class="control-label"></label>
        <input asp-for="PicturePath" class="form-control" type="text"/>
        <span asp-validation-for="PicturePath" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">ცვლიელების შენახვა</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
