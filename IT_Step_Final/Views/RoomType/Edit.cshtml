@using OnlineBooking.Domain.Dtos
@model RoomTypeModel
@{
    ViewData["Title"] = "Edit Room";
}

<h2>ოთახის ინფორმაციის განახლება</h2>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>

    <div class="form-group">
        <label asp-for="TypeName" class="control-label"></label>
        <input asp-for="TypeName" class="form-control" type="text" />
        <span asp-validation-for="TypeName" class="text-danger"></span>
    </div>
   
    <button type="submit" class="btn btn-primary">განახლება</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
