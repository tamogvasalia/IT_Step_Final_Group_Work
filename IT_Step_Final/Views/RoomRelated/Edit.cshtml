@using OnlineBooking.Domain.Dtos
@model RoomModel
@{
    ViewData["Title"] = "Edit Room";
}

<h2>ოთახის ინფორმაციის განახლება</h2>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" type="text" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PricePerDay" class="control-label"></label>
        <input asp-for="PricePerDay" class="form-control" type="number" />
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="maxGuests" class="control-label"></label>
        <input asp-for="maxGuests" class="form-control" type="number" />
        <span asp-validation-for="maxGuests" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="isAvailable" class="control-label"></label>
        <input asp-for="isAvailable" class="form-control" type="text" />
        <span asp-validation-for="isAvailable" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PicturePath" class="control-label"></label>
        <input asp-for="PicturePath" class="form-control" type="text" />
        <span asp-validation-for="PicturePath" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">განახლება</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
