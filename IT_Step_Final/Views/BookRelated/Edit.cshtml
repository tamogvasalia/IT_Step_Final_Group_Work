@using OnlineBooking.Domain.Dtos
@model BookingUniteModel

@{
    ViewData["Title"] = "Update Records";
}

<h2>ჯავშნის განახლება</h2>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    <div class="form-group">
        <label asp-for="bookingModel.RoomId">სასტუმრო</label>
        <select asp-for="bookingModel.RoomId" asp-items="Model.HotelList" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="bookingModel.checkInTime" class="control-label">ჩასვლის დრო</label>
        <input asp-for="bookingModel.checkInTime" class="form-control" type="date" />
        <span asp-validation-for="bookingModel.checkInTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="bookingModel.checkOutTime" class="control-label">გასვლის დრო</label>
        <input asp-for="bookingModel.checkOutTime" class="form-control" type="date" />
        <span asp-validation-for="bookingModel.checkOutTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="bookingModel.totalPrice" class="control-label">სრული ფასი</label>
        <input asp-for="bookingModel.totalPrice" class="form-control" type="number" step="0.01" readonly />
        <span asp-validation-for="bookingModel.totalPrice" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3"><i class="fas fa-save"></i> ცვლილებების შენახვა</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
