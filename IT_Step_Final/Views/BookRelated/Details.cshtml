@using OnlineBooking.Domain.Dtos
@model BookingModel
@{
    ViewData["Title"] = "Details";
}

<h2>დეტალები</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.checkInTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.checkInTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.checkOutTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.checkOutTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.totalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.totalPrice)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">რედაქტირება</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-secondary">წაშლა</a>
    <a asp-action="Index" class="btn btn-secondary">უკან დაბრუნება</a>
</div>
