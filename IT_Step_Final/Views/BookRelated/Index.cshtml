@using OnlineBooking.Domain.Dtos
@using System.Linq
@model IEnumerable<BookingModel>

@{
    ViewData["Title"] = "Bookings";
}

<h2 class="mt-4">@ViewData["Title"]</h2>

<form method="get" asp-action="Search" asp-controller="BookRelated" class="mb-4">
    <div class="input-group">
        <input type="text" name="query" class="form-control" placeholder="Search by name or city" value="@Context.Request.Query["query"]">
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </div>
</form>
<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> ჯავშნის დამატება</a>
</div>
<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Room.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.checkInTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.checkOutTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.totalPrice)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Room.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.checkInTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.checkOutTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.totalPrice)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> რედაქტირება
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-info-circle"></i> დეტალები
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> წაშლა
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
